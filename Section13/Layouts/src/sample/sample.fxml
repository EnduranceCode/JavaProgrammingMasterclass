<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="This label is in the top position" BorderPane.alignment="CENTER"
               style="-fx-border-width: 3px; -fx-border-color: blue; -fx-border-style: dashed;"/>
    </top>

    <left>
        <Label text="This label is in the left position"/>
    </left>

    <center>
        <Label text="This label is in the center position and has an extraordinary long text in it"/>
    </center>

    <right>
        <Label text="This label is on the right position"/>
    </right>
    
    <bottom>
        <HBox spacing="10" alignment="BASELINE_RIGHT">
            <padding>
                <Insets right="10" bottom="10"/>
            </padding>

            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>
</BorderPane>
